template(name='battles')
  div.container.battles-view
    form.add_battle
      label Name
        input.form.control(name='name')
      select(name='mapId')
        each mapdata
          option(value="#{_id}")= name
      button.btn.btn-default.ok(type='submit') OK
    dev.list-group.row
      each battles
        div.list-group-item.col-xs-12
          +battle_list_item

template(name='battle_list_item')
  a.col-xs-2(href="/battles/#{_id}")
    = name
  dev.col-xs-3
    = mapdata.name
  dev.col-xs-3
    each groups
      = name
      br
  dev.col-xs-2
    select.select_group(name='groupId')
      option(value="-") -
      each ownerGroups
        option(value="#{_id}")= name
